@model ASM2.Models.User
@{
    ViewData["Title"] = "Register";
}

<style>
    body {
        background-color: #f8f9fa;
        font-family: 'Roboto', sans-serif;
    }

    .register-container {
        max-width: 400px;
        margin: 50px auto;
        padding: 30px;
        background-color: #ffffff;
        border-radius: 8px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
    }

    h1 {
        text-align: center;
        color: #2c3e50;
        margin-bottom: 30px;
        font-weight: 700;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-control {
        border-radius: 4px;
        border: 1px solid #ced4da;
        padding: 10px;
        font-size: 16px;
    }

    .btn-primary {
        background-color: #3498db;
        border: none;
        padding: 12px;
        font-size: 16px;
        font-weight: 600;
        width: 100%;
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #2980b9;
        }

    .text-danger {
        color: #e74c3c;
        font-size: 14px;
        margin-top: 5px;
    }

    .text-success {
        color: #2ecc71;
        font-size: 14px;
        margin-bottom: 15px;
    }

    .login-link {
        text-align: center;
        margin-top: 20px;
    }

        .login-link a {
            color: #3498db;
            text-decoration: none;
            transition: color 0.3s ease;
        }

            .login-link a:hover {
                color: #2980b9;
            }
</style>

<div class="register-container">
    <h1>Register</h1>
    @if (!string.IsNullOrEmpty(ViewBag.Message))
    {
        <div class="text-success">
            @ViewBag.Message
        </div>
    }
    <form asp-action="Register" method="post">
        @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Email" class="sr-only"></label>
            <input asp-for="Email" class="form-control" placeholder="Email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Pass" class="sr-only"></label>
            <input asp-for="Pass" type="password" class="form-control" placeholder="Password" />
            <span asp-validation-for="Pass" class="text-danger"></span>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Register</button>
        </div>
    </form>
    <div class="login-link">
        <a asp-action="Login">Already have an account? Login</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}