@model ASM2.Areas.Admin.Models.Product

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Model.Name</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        @@import url('https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;700&display=swap');

        body {
            font-family: 'Roboto', sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f8f9fa;
            color: #333;
        }

        .container {
            max-width: 1200px;
            margin: 40px auto;
            padding: 0 20px;
        }

        .product {
            display: flex;
            background-color: white;
            border-radius: 12px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            overflow: hidden;
        }

        .product-image {
            flex: 1;
            padding: 30px;
        }

        .product-image img {
            width: 100%;
            border-radius: 8px;
            transition: transform 0.3s ease;
        }

        .product-image img:hover {
            transform: scale(1.05);
        }

        .product-details {
            flex: 1;
            padding: 40px;
        }

        h1 {
            font-size: 32px;
            margin-bottom: 20px;
            color: #2c3e50;
        }

        .price {
            font-size: 36px;
            color: #e74c3c;
            font-weight: 700;
            margin-bottom: 20px;
        }

        .price sup {
            font-size: 20px;
            top: -0.5em;
        }

        .reviews {
            display: flex;
            align-items: center;
            font-size: 16px;
            color: #f39c12;
            margin-bottom: 25px;
        }

        .reviews span {
            margin-left: 10px;
            color: #7f8c8d;
        }

        .buttons {
            display: flex;
            gap: 15px;
            margin-bottom: 30px;
        }

        .add-to-cart, .buy-now {
            padding: 12px 24px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            border-radius: 6px;
            transition: all 0.3s ease;
            text-transform: uppercase;
        }

        .add-to-cart {
            background-color: #3498db;
            color: white;
            border: none;
        }

        .add-to-cart:hover {
            background-color: #2980b9;
        }

        .buy-now {
            background-color: #2ecc71;
            color: white;
            border: none;
        }

        .buy-now:hover {
            background-color: #27ae60;
        }

        .product-description {
            margin-top: 30px;
            border-top: 1px solid #ecf0f1;
            padding-top: 30px;
        }

        .product-description p {
            font-size: 16px;
            line-height: 1.6;
            color: #34495e;
            margin-bottom: 20px;
        }

        .product-description ul {
            list-style-type: disc;
            padding-left: 20px;
            color: #34495e;
        }

        .product-description li {
            margin-bottom: 10px;
        }

        @@media (max-width: 768px) {
            .product {
                flex-direction: column;
            }

            .product-image, .product-details {
                padding: 20px;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="product">
            <div class="product-image">
                <img src="/images/@Model.Image" alt="@Model.Name">
            </div>
            <div class="product-details">
                <h1>@Model.Name</h1>
                <p class="price">@Model.UnitPrice.ToString("C").Split('.')[0]<sup>@Model.UnitPrice.ToString("C").Split('.')[1]</sup></p>
                <p class="reviews">
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="far fa-star"></i>
                    <span>4.0 (123 reviews)</span>
                </p>

                <div class="buttons">
                    <form asp-controller="Cart" asp-action="AddToCart" method="post">
                        <input type="hidden" name="productId" value="@Model.ProductId" />
                        <input type="hidden" name="quantity" value="1" />
                        <button type="submit" class="add-to-cart">
                            <i class="fas fa-shopping-cart"></i> Thêm vào giỏ hàng
                        </button>
                    </form>
                    <button class="buy-now" onclick="buyNow(@Model.ProductId)">Mua ngay</button>

                </div>

                <div class="product-description">
                    <p>This is a demonstration store. You can purchase products like this from <strong>@Model.Name</strong>.</p>
                    <ul>
                        <li>@Model.Description</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    @section Scripts {
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script>
            $(document).ready(function () {
                $('.add-to-cart').click(function (e) {
                    e.preventDefault();
                    var form = $(this).closest('form');
                    $.ajax({
                        url: form.attr('action'),
                        type: form.attr('method'),
                        data: form.serialize(),
                        success: function (result) {
                            alert('Product added to cart successfully!');
                        },
                        error: function () {
                            alert('Failed to add product to cart. Please try again.');
                        }
                    });
                });
            });
            function buyNow(productId) {
                $.ajax({
                    url: '/Cart/AddToCart', // The Cart controller's AddToCart action
                    type: 'POST',
                    data: {
                        productId: productId,
                        quantity: 1
                    },
                    success: function (result) {
                        window.location.href = '/Cart'; // Redirect to cart page after successful addition
                    },
                    error: function () {
                        alert('Failed to add product to cart. Please try again.');
                    }
                });
            }
        </script>
    }
</body>
</html>