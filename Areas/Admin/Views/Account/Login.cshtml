@{
    ViewData["Title"] = "Login";
    Layout = "_LayoutLogin";
}

<style>
    body {
        background-color: #f8f9fa;
        font-family: 'Roboto', sans-serif;
    }

    .login-container {
        max-width: 400px;
        margin: 50px auto;
        padding: 30px;
        background-color: #ffffff;
        border-radius: 8px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
    }

    .login-form h2 {
        text-align: center;
        color: #2c3e50;
        margin-bottom: 30px;
        font-weight: 700;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-control {
        border-radius: 4px;
        border: 1px solid #ced4da;
        padding: 12px;
        font-size: 16px;
    }

        .form-control:focus {
            border-color: #3498db;
            box-shadow: 0 0 0 0.2rem rgba(52, 152, 219, 0.25);
        }

    .form-check-input:checked {
        background-color: #3498db;
        border-color: #3498db;
    }

    .btn-primary {
        background-color: #3498db;
        border: none;
        padding: 12px;
        font-size: 16px;
        font-weight: 600;
        width: 100%;
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #2980b9;
        }

    .forgot-password {
        color: #7f8c8d;
        font-size: 14px;
        text-decoration: none;
        transition: color 0.3s ease;
    }

        .forgot-password:hover {
            color: #34495e;
        }

    .signup-link {
        text-align: center;
        margin-top: 20px;
        font-size: 14px;
    }

        .signup-link a {
            color: #3498db;
            text-decoration: none;
            font-weight: 600;
            transition: color 0.3s ease;
        }

            .signup-link a:hover {
                color: #2980b9;
            }

    .text-danger {
        color: #e74c3c;
        font-size: 14px;
        margin-top: 15px;
        text-align: center;
    }
</style>

<div class="login-container">
    <form asp-action="login" method="post" class="login-form">
        <h2>Welcome Back</h2>
        <div class="form-group">
            <label for="userName" class="form-label">Email address</label>
            <input type="text" class="form-control" id="userName" name="userName" placeholder="Enter your email" required>
        </div>
        <div class="form-group">
            <label for="password" class="form-label">Password</label>
            <input type="password" class="form-control" name="password" id="password" placeholder="Enter your password" required>
        </div>
        <div class="form-check mb-3">
            <input type="checkbox" class="form-check-input" id="rememberMe" name="rememberMe">
            <label class="form-check-label" for="rememberMe">Remember me</label>
        </div>
        <button type="submit" class="btn btn-primary mb-3">Log In</button>
        <div class="d-flex justify-content-center">
            <a href="#" class="forgot-password">Forgot password?</a>
        </div>
        <div class="signup-link">
            <p>Don't have an account? <a href="#">Sign up</a></p>
        </div>
        @if (!string.IsNullOrEmpty(ViewBag.Info))
        {
            <div class="text-danger">@ViewBag.Info</div>
        }
    </form>
</div>