@model Areas_Admin_Views_Account_Login
@{
    ViewData["Title"] = "Dashboard";
}

<style>
    body {
        font-family: 'Roboto', sans-serif;
        background-color: #f8f9fa;
        color: #333;
    }

    .dashboard-container {
        max-width: 800px;
        margin: 50px auto;
        padding: 30px;
        background-color: #ffffff;
        border-radius: 8px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
    }

    h1 {
        color: #2c3e50;
        margin-bottom: 20px;
        font-weight: 700;
    }

    .role-info {
        font-size: 18px;
        margin-bottom: 20px;
        color: #7f8c8d;
    }

    .menu-items {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        margin-top: 30px;
    }

    .menu-item {
        flex: 1 1 calc(33.333% - 20px);
        min-width: 200px;
        text-align: center;
        padding: 20px;
        background-color: #3498db;
        color: #ffffff;
        text-decoration: none;
        border-radius: 8px;
        transition: background-color 0.3s ease, transform 0.3s ease;
    }

        .menu-item:hover {
            background-color: #2980b9;
            transform: translateY(-5px);
        }

        .menu-item i {
            font-size: 24px;
            margin-bottom: 10px;
        }

    .no-access {
        text-align: center;
        color: #e74c3c;
        font-size: 18px;
    }
</style>

<div class="dashboard-container">
    <h1>Xin chào, @User.Identity.Name</h1>

    @if (User.IsInRole("Admin"))
    {
        <p class="role-info">Đây là trang của Admin</p>
        <div class="menu-items">
            <a class="menu-item" asp-area="admin" asp-controller="Product" asp-action="Index">
                <i class="fas fa-box"></i>
                <div>Sản phẩm</div>
            </a>
            <a class="menu-item" asp-area="admin" asp-controller="User" asp-action="Index">
                <i class="fas fa-users"></i>
                <div>Nhân viên</div>
            </a>
            <a class="menu-item" asp-area="admin" asp-controller="Customers" asp-action="Index">
                <i class="fas fa-user-tie"></i>
                <div>Khách hàng</div>
            </a>
        </div>
    }
    else if (User.IsInRole("User"))
    {
        <p class="role-info">Đây là trang của User</p>
        <div class="menu-items">
            <a class="menu-item" asp-area="admin" asp-controller="Product" asp-action="Index">
                <i class="fas fa-box"></i>
                <div>Sản phẩm</div>
            </a>
            <a class="menu-item" asp-area="admin" asp-controller="Customers" asp-action="Index">
                <i class="fas fa-user-tie"></i>
                <div>Khách hàng</div>
            </a>
        </div>
    }
    else
    {
        <p class="no-access">Bạn không có quyền truy cập vào trang này</p>
    }
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/your-font-awesome-kit.js" crossorigin="anonymous"></script>
}